<div class="validation--left">
  <div class="queries__nav">
    {{validation-list-view validations=validationsData manageKeys="manageKeys" showValidation="showValidation" platform=platform selected=validation-to-show}}
  </div>
</div>
<!-- /.left -->
<div class="validation--right">
  <div class="output">
    {{#if validation-to-show}}
      {{validation-detailed-view validation=validation-to-show onConceptClick=(action 'onConceptClick') languageOptions=languageOptions defaultLanguage=defaultLanguage sortResultTable=sortResultTable timeOut=timeOut baseURL=baseURL}}
    {{else}}
      <div class="empty-message">
        Choose a rule on the left! <br> <br> {{intro-text}}
      </div>
    {{/if}}
  </div>
</div>

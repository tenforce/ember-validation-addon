{{#if combinedTables}}
  <div class="col-md-12">
    <button type="button" class="btn btn-info-outline btn-block" {{action "runSelectedQueries"}}>
      {{buttonLabel}}
    </button>
    {{combined-result-tables relationships=runQueriesResults.data.relationships included=runQueriesResults.included}}
  </div>

{{else}}
  <div class="col-md-3">
    <button type="button" class="btn btn-info-outline btn-block" {{action "runSelectedQueries"}}>
      {{buttonLabel}}
    </button>
    {{#if (await model)}}
      {{validation-list-view validations=model manageKeys="manageKeys" showValidation="showValidation"}}
    {{/if}}
  </div>
  <div class="col-md-9">
    {{validation-detailed-view validation=validation-to-show}}
  </div>
{{/if}}

